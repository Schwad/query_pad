%nav.navbar.navbar-expand-md.navbar-light
  .navbar-brand
    %h2.text-muted
      QueryPad
  .collapse.navbar-collapse#navbarCollapse
    - if current_user
      %ul.navbar-nav.mr-auto
        %li.nav-item
          = link_to 'Home', root_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Questions', questions_path, class: 'nav-link'
        %li.nav-item
          = link_to 'New Question', new_user_question_path(current_user), class: 'nav-link'
        %li.nav-item
          = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'
      %ul.navbar-nav.mr-auto
        %li.nav-item
          = form_with url: search_questions_path, class: 'form-inline', local: true do |f|
            .form-group
              = f.search_field :q, class: 'form-control'
            .form-group
              = f.submit 'Search', class: 'form-control btn btn-success btn-md'

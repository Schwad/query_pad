.row
  .col-md-12
    %h2{style: "color:grey;"}
      = link_to "#{vote_cast == 'Upvote' ? '👍' : '⬆️'}", user_votes_path(current_user, vote: { votable_type: resource.class, votable_id: resource.id, user_id: current_user.id, upvote: true, question: question.id }), method: :post
    - if power_user || moderator_user
      %h2
        = link_to "#{vote_cast == 'Downvote' ? '| 👎' : '| ⬇️'}", user_votes_path(current_user, vote: { votable_type: resource.class, votable_id: resource.id, user_id: current_user.id, upvote: false, question: question.id }), method: :post

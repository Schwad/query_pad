#question
  %h1= "#{@question.title} - #{@question.score}"
  %p
    %em= "#{ @question.user.email }#{ @question.user.decorate.flair } | #{ distance_of_time_in_words(Time.now, @question.created_at) } ago#{ @question.time_ago_if_edited }"
  %p= markdown(@question.body)
  - unless current_user.questions.include?(@question)
    %p= render 'votes/votable', resource: @question, vote_cast: current_user.vote_cast(@question), question: @question
  - if current_user.questions.include?(@question) || moderator_user
    %p= link_to 'edit', edit_user_question_path(current_user, @question)
    %p= link_to 'delete', user_question_path(current_user, @question), method: :delete
%hr
#answers
  = render @question.answers.order(score: :desc)
%p= link_to 'Add Answer', new_user_answer_path(current_user, question_id: @question)
